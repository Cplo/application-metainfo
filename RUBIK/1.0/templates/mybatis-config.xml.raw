<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>
  <properties resource="db.properties"/>

  <settings>
    <setting name="mapUnderscoreToCamelCase" value="true"/>
  </settings>

  <typeAliases>
    <typeAlias type="io.transwarp.studio.persistence.model.transporter.job.DataflowJob" alias="DataflowJob"/>

    <typeAlias type="io.transwarp.studio.persistence.model.notification.common.Notification" alias="Notification"/>
    <typeAlias type="io.transwarp.studio.persistence.model.notification.common.NotificationLevel"
               alias="NotificationLevel"/>
    <typeAlias type="io.transwarp.studio.persistence.model.notification.common.Notification"
               alias="Notification"/>
    <typeAlias type="io.transwarp.studio.persistence.model.notification.common.RecipientNotification"
               alias="RecipientNotification"/>
    <typeAlias type="io.transwarp.studio.persistence.model.tag.common.impl.StandardTag" alias="StandardTag"/>
    <typeAlias type="io.transwarp.studio.persistence.model.tag.common.impl.StandardTagModel" alias="StandardTagModel"/>
    <typeAlias type="io.transwarp.studio.persistence.model.ticket.common.Queue" alias="Queue"/>
    <typeAlias type="io.transwarp.studio.persistence.model.ticket.common.Ticket" alias="Ticket"/>
    <typeAlias type="io.transwarp.studio.persistence.model.ticket.common.FollowUp" alias="FollowUp"/>
    <typeAlias type="io.transwarp.studio.persistence.model.ticket.common.TicketChange" alias="TicketChange"/>
    <typeAlias type="io.transwarp.studio.persistence.model.ticket.common.Attachment" alias="Attachment"/>
    <typeAlias type="io.transwarp.studio.persistence.model.ticket.common.TicketDependency" alias="TicketDependency"/>
    <package name="io.transwarp.studio.persistence.model.cubedesigner"/>
    <package name="io.transwarp.studio.persistence.model.studio"/>
    <package name="io.transwarp.studio.persistence.model.governor"/>
  </typeAliases>

  <plugins>
    <plugin interceptor="com.github.pagehelper.PageHelper">
      <property name="offsetAsPageNum" value="true"/>
      <property name="reasonable" value="false"/>
      <property name="supportMethodArguments" value="true"/>
    </plugin>
  </plugins>

  <environments default="dev">
    <environment id="dev">
      <transactionManager type="JDBC"></transactionManager>
      <dataSource type="POOLED">
        <property name="driver" value="${db.driver}"/>
        <property name="url" value="${db.url}"/>
        <property name="username" value="${db.user}"/>
        <property name="password" value="${db.password}"/>
      </dataSource>
    </environment>
  </environments>

  <mappers>
    <package name="io.transwarp.studio.persistence.mapper.notification"/>
    <package name="io.transwarp.studio.persistence.mapper.tag"/>
    <package name="io.transwarp.studio.persistence.mapper.ticket"/>
    <package name="io.transwarp.studio.persistence.mapper.transporter"/>
    <package name="io.transwarp.studio.persistence.mapper.cubedesigner"/>
    <package name="io.transwarp.studio.persistence.mapper.studio"/>
    <package name="io.transwarp.studio.persistence.mapper.governor"/>
  </mappers>
</configuration>
